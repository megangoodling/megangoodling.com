{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "react-app",
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "jsx-quotes": ["error", "prefer-single"]
    },
    "settings": {
        "react": {
            "version": "latest"
        }
    }
}